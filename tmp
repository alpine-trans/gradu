import SwiftUI

struct LargeToggleStyle: ToggleStyle {
    func makeBody(configuration: Configuration) -> some View {
        HStack {
            configuration.label
                .font(.title)  // ラベルのフォントサイズを大きくする

            Spacer()

            ZStack {
                RoundedRectangle(cornerRadius: 16)
                    .fill(configuration.isOn ? Color.green : Color.red)
                    .frame(width: 100, height: 50)  // Toggleの大きさを変更
                    .animation(.easeInOut, value: configuration.isOn)

                Circle()
                    .fill(Color.white)
                    .frame(width: 40, height: 40)  // トグルハンドルの大きさを変更
                    .offset(x: configuration.isOn ? 25 : -25)  // ハンドルの位置を調整
                    .animation(.easeInOut, value: configuration.isOn)
                    .gesture(
                        TapGesture()
                            .onEnded {
                                configuration.isOn.toggle()
                            }
                    )
            }
        }
        .padding()
    }
}

struct ContentView: View {
    @State private var isOn = false

    var body: some View {
        Toggle(isOn: $isOn) {
            Text("Large Toggle")
        }
        .toggleStyle(LargeToggleStyle())
        .padding()
    }
}

struct ContentView_Previews: PreviewProvider {
    static var previews: some View {
        ContentView()
    }
}
